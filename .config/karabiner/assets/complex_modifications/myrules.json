{
  "title": "My cool rules",
  "rules": [
    {
      "description": "Better Optioning: Brackets on Option keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_alt"
          },
          "to": [
            {
              "key_code": "left_alt"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "open_bracket"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_alt"
          },
          "to": [
            {
              "key_code": "right_alt"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "close_bracket"
            }
          ]
        }
      ]
    },
    {
      "description": "Better Commanding: Braces on Command keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command"
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "open_bracket",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command"
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "close_bracket",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        }
      ]
    }
  ]
}
